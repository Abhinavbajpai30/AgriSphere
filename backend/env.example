# Environment Configuration for AgriSphere Backend
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agrisphere
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agrisphere?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# OpenEPI API Configuration - Centralized data source for all agricultural and environmental data
OPENEPI_API_KEY=your-openepi-api-key
OPENEPI_BASE_URL=https://api.openepi.org/v1
OPENEPI_RATE_LIMIT_PER_MINUTE=60
OPENEPI_CACHE_TTL_SECONDS=3600
OPENEPI_REQUEST_TIMEOUT_MS=30000

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info